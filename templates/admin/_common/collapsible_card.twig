<div class="card collapsible mt-2 col-md-{{ width|default(12) }} px-0{% if collapsed|default(false) %} collapsed{% endif %}">
    {% block card_header %}
        <div class="card-header">
            <i class="{{ icon }}"></i> {{ title }}
        </div>
    {% endblock %}
    <div class="card-body {{ bodyClass|default('') }}"{% if collapsed|default(false) %} style="display:none"{% endif %}>
        {% block card_body %}{% endblock %}
    </div>
</div>
