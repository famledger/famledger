{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_header_wrapper %}
    <section class="content-header">
        <div class="d-flex flex-row justify-content-between align-content-center w-100">
            <div class="content-header-title">
                <h1 class="title">
                    Upload a Statement
                </h1>
            </div>
            <div class="page-actions">
                <a class=" action-index btn btn-secondary" href="{{ backUrl }}">Back to listing</a>
            </div>
        </div>
    </section>
{% endblock %}

{% block page_content %}

    <div class="card">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group">
                {{ form_label(form.account, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.account, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.file, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.file, {'attr': {'class': 'form-control-file'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

